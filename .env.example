# Configuration de base
PORT=3000
NODE_ENV=development

# Base de données
DATABASE_URL="file:../dev.db"

# JWT
JWT_SECRET="your_secure_jwt_secret_key_here"
JWT_EXPIRATION="1d"

# Configuration MinIO (pour le stockage des fichiers)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="yoga-postures"
MINIO_USE_SSL=false

# Configuration du stockage local (alternative à MinIO)
UPLOAD_DEST="./uploads"
SERVE_STATIC_PATH="/uploads"

# CORS
ALLOWED_ORIGINS="http://localhost:19006,http://localhost:8084,exp://192.168.0.206:8084"